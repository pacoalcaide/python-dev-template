{
    //"initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/load-env.sh", // cargar variables de entorno en el pc host
    
    "name": "python-dev",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "dev",
    "workspaceFolder": "/workspace",

    // ESTA ES LA CLAVE: Dice a la extensión dónde buscar archivos .env antes de ejecutar Compose
    // (Esto resuelve los problemas de anidamiento de .env)
    //"dockerComposeFile.envPaths": [
    //    "../.env" 
    //],

    //"runArgs": [
    //    "--env-file", "${localWorkspaceFolder}/.env"
    //],
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.colorTheme": "Default High Contrast",
                "workbench.editor.showTabs": "multiple",
                "python.defaultInterpreterPath": "${containerEnv:PYTHON_INTERPRETER}",
                "python.selectInterpreter": "${containerEnv:PYTHON_INTERPRETER}"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "ms-vscode.live-server",
                "yzhang.markdown-all-in-one",
                "quarto.quarto",
                "redhat.vscode-yaml",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml",
                "oderwat.indent-rainbow",
                "mechatroner.rainbow-csv",
                "ms-toolsai.datawrangler",
                "mhutchie.git-graph"
            ]
        }
    }
}